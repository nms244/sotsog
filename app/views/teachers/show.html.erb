<div class="teachers-show">
  <%= navigation_bar %>

  <main>
    <div class="icon-button">
      <%= user_icon(@teacher) %>
      <% if teacher_signed_in? %>
        <div class="buttons">
          <%= link_to '編集', edit_teacher_registration_path, class: 'button' %>
          <%= link_to 'フォロー/フォロワー', teacher_following_path(@teacher.id), class: 'button' %>
        </div>
      <% elsif student_signed_in? %>
        <%= render 'student_followings/follow_button', teacher: @teacher %>
        <br>
        <%= render 'student_followings/DM_link', tea: @teacher, ids: @teacher_ids, flwng: @following, flwd: @followed %>
      <% else %>
        ※ログインしてください。
      <% end %>
    </div>
    <div class="name"><span>名前：</span><%= @teacher.name %></div>
    <div class="subject"><span>担当科目：<br></span><%= @teacher.subject %></div>
    <div class="profile"><span>プロフィール：<br></span><%= @teacher.profile %></div>

  </main>

</div>
