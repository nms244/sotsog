<% if current_student.already_following?(teacher) %>
  <%= form_for(current_student.student_followings.find_by(followed_id: teacher.id), method: :delete) do |f| %>
    <%= hidden_field_tag :followed_id, teacher.id %>
    <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
  <% end %>
<% else %>
  <%= form_for(current_student.student_followings.build) do |f| %>
    <%= hidden_field_tag :followed_id, teacher.id %>
    <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
  <% end %>
<% end %>
