<br> フォロー <br>
<% @students.each do |s| %>
  <% if current_teacher.already_following?(s)%>
    <%= image_tag s.icon_url, size: '30x30' if s.icon? %>
    <%= s.name %>
    <%= link_to '詳細', student_path(s.id)%>
    <%= render 'teacher_followings/DM_link', stu: s, ids: @student_ids, flwng: current_teacher.already_following?(s), flwd: current_teacher.already_followed?(s) %>
    <br>
  <% end %>
<% end %>

