  <% if flwng && flwd %>
    <% if ids.include?(stu.id) %>
      <%= link_to 'DMへ', room_path(current_teacher.rooms.find_by(student_id: stu.id)), class: 'button' %>
    <% else %>
      <%= form_for Room.new do |f| %>
        <%= f.hidden_field :student_id, :value => stu.id %>
        <%= f.submit "ルーム作成", class: 'button' %>
      <% end %>
    <% end %>
  <% elsif flwd %>
    <div class="comment">フォローしてください</div>
  <% elsif flwng %>
    <div class="comment">フォローされていません</div>
  <% else %>
    <div class="comment">DMを送るためには相互フォローである必要があります</div>
  <% end %>
